  <script>
    // Mobile menu toggle
    const menuBtn = document.getElementById('menuBtn');
    const links = document.getElementById('navlinks');
    menuBtn?.addEventListener('click', () => {
      const open = links.style.display === 'flex';
      links.style.display = open ? 'none' : 'flex';
      links.style.gap = '24px';
      links.style.flexDirection = 'column';
      links.style.padding = '12px 0';
      menuBtn.setAttribute('aria-expanded', String(!open));
    });

    // Simple client-side validation + demo submit
    const form = document.getElementById('contactForm');
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      const data = Object.fromEntries(new FormData(form).entries());
      // In production, POST `data` to your backend or a form service (e.g., Formspree)
      alert(`Thanks, ${data.name}! We'll email you at ${data.email} to schedule your ${data.service.toLowerCase()}.`);
      form.reset();
    });

    // Footer year
    document.getElementById('y').textContent = new Date().getFullYear();
  </script>

